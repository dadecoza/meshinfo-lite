{% extends "static/layout.html.j2" %}

{% block title %}Stats{% endblock %}

{% block og_title %}Network Statistics | {{ config['mesh']['name'] }}{% endblock %}
{% block og_description %}Comprehensive statistics for the {{ config['mesh']['short_name'] }} mesh network. View active nodes, message counts, telemetry data, and network performance metrics.{% endblock %}
{% block og_image_width %}1200{% endblock %}
{% block og_image_height %}630{% endblock %}
{% block twitter_title %}Network Statistics | {{ config['mesh']['name'] }}{% endblock %}
{% block twitter_description %}Comprehensive statistics for the {{ config['mesh']['short_name'] }} mesh network. View active nodes, message counts, telemetry data, and network performance metrics.{% endblock %}
{% block twitter_image_width %}1200{% endblock %}
{% block twitter_image_height %}630{% endblock %}

{% block head %}
  {{ super() }}
{% endblock %}

{% block content %}
  <h5 class="mb-2 text-gray-500">Stats</h5>
  <h1 class="mb-2 text-xl">Stats</h1>
  <p class="mb-2">
    Some revelations based on messages that have
    been heard by the mesh by <a href="node_{{ config['server']['node_id'] }}.html">{{ config['server']['node_id'] }}</a> ({{ config['server']['node_id'] }}).
  </p>

  <h3 class="text-lg">Current</h3>
  <div class="mb-4">
    <h3>Active Nodes</h3>
    <div>
      <div>{{ stats.active_nodes }}</div>
    </div>
  </div>

  <div class="mb-4">
    <h3 class="text-lg">Persisted</h3>
    <div class="mb-2">
      <h3>Known Nodes</h3>
      <div>
        <div>{{ stats.total_nodes }}</div>
      </div>
    </div>
    <div class="mb-2">
      <h3>Chat Messages in Channel 0</h3>
      <div>
        <div>{{ stats.total_chat }}</div>
      </div>
    </div>
    <div class="mb-2">
      <h3>Telemetry</h3>
      <div>
        <div>{{ stats.total_telemetry }}</div>
      </div>
    </div>
    <div class="mb-2">
      <h3>Traceroutes</h3>
      <div>
        <div>{{ stats.total_traceroutes }}</div>
      </div>
    </div>
  </div>

  <div class="mb-4">
    <h3 class="text-lg">Since Last Restart</h3>
    <div class="mb-2">
      <h3>Messages (Session Total)</h3>
      <div>
        <div>{{ stats.total_messages }}</div>
      </div>
    </div>
    <div class="mb-2">
      <h3>Messages (Session MQTT)</h3>
      <div>
        <div>{{ stats.total_mqtt_messages }}</div>
      </div>
    </div>
  </div>

{% endblock %}
